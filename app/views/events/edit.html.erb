<%= link_to "|Go back to event page|", event_path(@event) %>

<h1>Update event:</h1>
<%= form_with model: @event do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date %>
    <%= f.datetime_local_field :date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>