<%= form_with model: event do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date %>
    <%= f.datetime_local_field :date %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>