<%= link_to "|Create new event|", new_event_path %>

<h1>All events:</h1>

<h2>Past events:</h2>
<ul>
  <% @past_events.each do |e| %>
    <li><h3><%= e.title %></h3></li>
    <li><%= e.description %></li>
    <li><%= e.date %></li>
    <li><%= e.location %></li>
  <% end %>
</ul>

<h2>Future events:</h2>
<ul>
  <% @future_events.each do |e| %>
    <li><h3><%= e.title %></h3></li>
    <li><%= e.description %></li>
    <li><%= e.date %></li>
    <li><%= e.location %></li>
  <% end %>
</ul>