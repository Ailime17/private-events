<%= link_to "|Create new event|", new_event_path %>
<%= link_to "|Go back to events|", events_path %>

<h1>Your created events:</h1>
<ul>
  <% @user_created_events.each do |e| %>
    <li><%= e.title %></li>
  <% end %>
</ul>

<h1>Events you signed up for:</h1>

<p>Expired events:</p>
<ul>
  <% @user_attended_events.where("date < ?", DateTime.now).each do |e| %>
    <li><%= e.title %></li>
  <% end %>
<br></ul>

<p>Incoming events:</p>
<ul>
  <% @user_attended_events.where("date >= ?", DateTime.now).each do |e| %>
    <li><%= e.title %></li>
  <% end %>
</ul>